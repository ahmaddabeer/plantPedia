<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/fragdrawablegradient"

    tools:context=".Catogray.Catogary">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textgradient">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:titleTextColor="@android:color/white">

                    <!-- Horizontal container inside Toolbar -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:paddingTop="@dimen/_10sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Search box -->
                        <EditText
                            android:id="@+id/category_editsearch"
                            android:layout_width="match_parent"
                            android:textColor="@color/green4"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_search"
                            android:hint="Avelable Page (1-20,865) each contain 20 list "
                            android:inputType="number"
                            android:padding="@dimen/_8sdp"
                            android:textSize="13sp" >



                        </EditText>


                      <ImageButton
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="8"
                          android:layout_marginEnd="5dp"
                          android:padding="@dimen/_5sdp"
                          android:background="@drawable/bg_search"
                          android:src="@drawable/baseline_search_24"/>



                    </LinearLayout>


                        <Spinner
                            android:id="@+id/search_type_change"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_4sdp"
                            />
                    </LinearLayout>






                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/catgory_recyclerview"
                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ProgressBar
                    android:id="@+id/loader"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>




        </LinearLayout>




</FrameLayout>