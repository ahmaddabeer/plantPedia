<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="9dp"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    android:padding="8dp"


    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/textgradient"


        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:scaleType="fitXY"
            android:id="@+id/category_row_item_image"
            android:layout_gravity="center"

            />

        <TextView
            android:id="@+id/categoryrow_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            android:text="item name"
            android:layout_below="@+id/category_row_item_image"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/roboitalic"
            android:gravity="center"
            android:textColor="@color/green4"/>

        <ImageButton
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignRight="@+id/category_row_item_image"

            android:background="@drawable/circle"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:src="@drawable/save"

            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>