<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlantPedia" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/green4</item>
         <item name="colorPrimaryVariant">@color/green4</item>
         <item name="android:statusBarColor">@color/green4</item>
    </style>

    <style name="Theme.PlantPedia" parent="Base.Theme.PlantPedia" />

    <style name="BottomNavActiveIndicator" parent="">
        <item name="android:background">@drawable/bottom_nav_item_bg</item>

    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/green4</item>
    </style>

    <style name="ToolbarSubtitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/green4</item>
    </style>
    <style name="ToolbarSubtitleText_for_category" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/green4</item>
        <item name="android:textStyle">bold</item>
    </style>






</resources>